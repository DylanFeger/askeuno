# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
PGDATABASE=database_name
PGHOST=localhost
PGPASSWORD=password
PGPORT=5432
PGUSER=user

# Session Security
SESSION_SECRET=your-very-long-random-string-change-this-in-production

# OpenAI API (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Application Environment
NODE_ENV=production

# Domain Configuration (Optional)
COOKIE_DOMAIN=.yourdomain.com  # For subdomain cookie sharing

# HTTPS Configuration (Optional)
FORCE_HTTPS=true  # Force HTTPS redirects
HSTS_MAX_AGE=31536000  # One year in seconds

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# File Upload (Optional)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads  # Where to store uploaded files